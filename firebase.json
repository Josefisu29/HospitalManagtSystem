{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/doctor",
        "destination": "/doctor/doctor.html"
      },
      {
        "source": "/doctor/**",
        "destination": "/doctor/doctor.html"
      },
      {
        "source": "/patient",
        "destination": "/patient/patient.html"
      },
      {
        "source": "/patient/**",
        "destination": "/patient/patient.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
